@model Task4.Models.Product



<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Name">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input type="number" asp-for="Price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Price">
    </div>
    <div class="form-group">
        <textarea asp-for="Description" placeholder="Description" rows="5" cols="120" style="resize:none;margin-top:20px">          
        </textarea>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input type="text" asp-for="Image" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter URL">
    </div>
    <br />  <br />
    <button type="submit" class="btn btn-primary">Update</button>
</form>

